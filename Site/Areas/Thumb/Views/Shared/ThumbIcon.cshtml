@model SDL.Web.Modules.Thumb.Models.MediaFileItem
@{
    var mediaFileThumbImage = Model.ThumbImage != null ? Model.ThumbImage.Url : "";
}
<div class="@Model.HtmlClasses" @Html.DxaEntityMarkup()>
    <div class="download-list">
   
        <div>
            @if (!string.IsNullOrEmpty(Model.GenerateThumbnail) && !Model.GenerateThumbnail.Equals("false"))
        {
            <img alt="download" onerror="this.src=@mediaFileThumbImage" width="@Model.Width" src="@Model.GeneratedThumbImage" height="@Model.Height">
        }
        else
        {
            <i class="fa @Model.GetIconClass()"></i>
        }
            <a href="@Model.Url">@Model.FileName</a>
            <small class="size" @Html.DxaPropertyMarkup(() => Model.FileSize)>(@Model.GetFriendlyFileSize())</small>
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <small @Html.DxaPropertyMarkup(() => Model.Description)>@Model.Description</small>
            }
        </div>
    </div>
</div>